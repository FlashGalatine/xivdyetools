{
  "name": "xivdyetools-presets-api",
  "version": "1.4.13",
  "private": true,
  "description": "Cloudflare Worker API for XIV Dye Tools Community Presets",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "db:migrate": "wrangler d1 execute xivdyetools-presets --remote --file=./schema.sql",
    "db:migrate:local": "wrangler d1 execute xivdyetools-presets --local --file=./schema.sql",
    "db:migrate:indexes": "wrangler d1 execute xivdyetools-presets --remote --file=./migrations/002_add_composite_indexes.sql",
    "db:seed": "npx tsx scripts/migrate-presets.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@xivdyetools/auth": "workspace:*",
    "@xivdyetools/crypto": "workspace:*",
    "@xivdyetools/logger": "workspace:*",
    "@xivdyetools/rate-limiter": "workspace:*",
    "@xivdyetools/types": "workspace:*",
    "hono": "^4.11.10"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.8",
    "@cloudflare/workers-types": "^4.20260207.0",
    "@types/node": "^25.2.2",
    "@vitest/coverage-v8": "^3.2.4",
    "@xivdyetools/test-utils": "workspace:*",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.66.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
