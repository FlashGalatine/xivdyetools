{
  "name": "xivdyetools-discord-worker",
  "version": "4.0.2",
  "private": true,
  "description": "XIV Dye Tools Discord Bot - Cloudflare Workers Edition",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:all": "vitest run && vitest run --config vitest.integration.config.ts",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "register-commands": "npx tsx scripts/register-commands.ts",
    "upload-emojis": "npx tsx scripts/upload-emojis.ts"
  },
  "keywords": ["discord", "bot", "ffxiv", "cloudflare-workers"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cf-wasm/photon": "^0.3.4",
    "@cloudflare/workers-types": "^4.20260302.0",
    "@resvg/resvg-wasm": "^2.6.2",
    "@xivdyetools/auth": "workspace:*",
    "@xivdyetools/bot-i18n": "workspace:*",
    "@xivdyetools/bot-logic": "workspace:*",
    "@xivdyetools/color-blending": "workspace:*",
    "@xivdyetools/svg": "workspace:*",
    "@xivdyetools/core": "workspace:*",
    "@xivdyetools/logger": "workspace:*",
    "@xivdyetools/rate-limiter": "workspace:*",
    "@xivdyetools/types": "workspace:*",
    "hono": "^4.12.2"
  },
  "devDependencies": {
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@xivdyetools/test-utils": "workspace:*",
    "discord-interactions": "^4.4.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.67.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
